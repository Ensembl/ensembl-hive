EOF

USER_FILTER=all
JOB_NAME=
JOB_ID=

while [ "$1" != "" ]; do
    case $1 in
        -J)
            JOB_NAME=$2
            shift
            ;;
        -u)
            USER_FILTER=$2
            shift
            ;;
        -w)
            ;;
        *)
            JOB_ID=$1
            ;;
    esac
    shift
done

echo "$bjobs_header"
if [ "x$JOB_ID" == "x" ]; then
    if [ "x$USER_FILTER" == "xall" ]; then
        echo "$bjobs_content" | awk '$7 ~ /'"${JOB_NAME}"'/'
    else
        echo "$bjobs_content" | awk '$7 ~ /'"${JOB_NAME}"'/ && $2 == "'"${USER_FILTER}"'"'
    fi
else
    echo "$bjobs_content" | awk '$1 == "'"${JOB_ID}"'" && $2 == "'"${USER_FILTER}"'"'
fi


